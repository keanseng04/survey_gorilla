<div class="container">

  <% if session[:user_id] %>
    Logged in as: <a href="/user/<%= @user.id %>"><%= @user.username %></a>
  </br>
    <form action="/survey", method="get">
      <input type="submit" name="submit" value="Create Survey" />
    </form>
  </br>
    <form action="/logout" method="get">
      <input type="submit" name="submit" value="Logout" />
    </form>


     <% else %>

  <table>
    <tr>
      <td><form action="/signup" method = "post">
          <input type="text" placeholder="username" name="user[username]">
          <input type="password" placeholder="password" name="user[password]" >
          <p><input type="submit" value="SIGN UP!"></td></p>
        </form></td>
    </tr>
  </table>

    <% if @message %>
    <h2 style=color:red><%= @message %>:</h2>
    </br>
    <% end %>

  <table>
    <tr>
      <td><form action="/signin" method = "post">
          <input type="text" placeholder="username" name="user[username]">
          <input type="password" placeholder="password" name="user[password]" >
          <p><input type="submit" value="SIGN IN"></td></p>
        </form></td>
    </tr>
  </table>




</div>

<% end %>


